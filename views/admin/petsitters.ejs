<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let petsitter of prods) { %>
                            <article class="card petsitter-item">
                                <header class="card__header">
                                    <h1 class="petsitter__title">
                                        <%= petsitter.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= petsitter.imageUrl %>" alt="<%= petsitter.title %>">
                                </div>
                                <div class="card__content">
                                    <h2 class="petsitter__price">$
                                        <%= petsitter.price %>
                                    </h2>
                                    <p class="petsitter__description">
                                        <%= petsitter.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-petsitter/<%= petsitter.id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-petsitter" method="POST">
                                        <input type="hidden" value="<%= petsitter.id %>" name="petsitterId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Petsitters Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>